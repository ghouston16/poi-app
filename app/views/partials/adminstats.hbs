<div class="uk-width-2-3@m  uk-card uk-card-default uk-padding-small uk-visible@m">
    <h5>Admin Stats</h5>
    <div class="uk-grid">
        <div class="uk-container uk-padding-small">
            <div class="uk-child-width-1-4@s uk-flex uk-flex-right" uk-grid uk-height-match="target: .uk-card">
                <div>
                    <div class="uk-card uk-card-default uk-card-small uk-text-center uk-text-baseline uk-animation-scale-up">
                        <div class="uk-card-media-top">
                            <i class="fas fa-user fa-3x" style="color:rgb(63,122,139)" title="Total Users" pos="bottom" uk-tooltip></i>
                        </div>
                        <div>
                            <div class="uk-card-footer">
                                <p>{{userTotal}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-container uk-padding-small">
            <div class="uk-child-width-1-4@s uk-flex uk-flex-right" uk-grid uk-height-match="target: .uk-card">
                <div>
                    <div class="uk-card uk-card-default uk-card-small uk-text-center uk-text-baseline uk-animation-scale-up">
                        <div class="uk-card-media-top">
                            <a href="/report">
                                <i class="fas fa-map-marker-alt fa-3x" style="color:rgb(139,63,69)" title="Total POIS" pos="bottom" uk-tooltip></i>
                            </a>
                        </div>
                        <div>
                            <div class="uk-card-footer">
                                <p>{{poiTotal}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="uk-container uk-padding-small">
            <div class="uk-child-width-1-4@s uk-flex uk-flex-right" uk-grid uk-height-match="target: .uk-card">
                <div>
                    <div class="uk-card uk-card-default uk-card-small uk-text-center uk-text-baseline uk-animation-scale-up">
                        <div class="uk-card-media-top">
                            <a href="/categories">
                                <i class="fas fa-folder fa-3x" style="color:rgb(189,155,33)" title="Total Categories" pos="bottom" uk-tooltip></i>
                            </a></div>
                        <div>
                            <div class="uk-card-footer">
                                <p>{{totalCats}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>