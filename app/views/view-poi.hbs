<div class="uk-flex uk-flex-center uk-flex-middle uk-grid-small" uk-grid>
    {{> title-card title="POI Tracker" subTitle="View POI"}}
    {{> main-menu }}
</div>
<div class="uk-width-expand@m">
<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <h3 class="uk-card-title uk-text-center">{{poi.name}}</h3>
        <img width="675"  src={{poi.image}}>
    <table class="uk-table">
        <thead>
        <th>Name</th>
        <th>Description</th>
        <th>Latitude</th>
        <th>Longitude</th>
        </thead>
            <tr>
                <td>{{poi.name}}</td>
                <td>{{poi.description}}</td>
                <td>{{poi.lat}}</td>
                <td>{{poi.long}}</td>
                <td><a href="/poiview/{{poi._id}}" class="uk-card uk-card-small uk-card-hover uk-padding-small">
                    <i class="fas fa-pen-alt fa-1x" style="color:rgb(198,24,203)" title="Update" pos="bottom" uk-tooltip></i>
                </a></td>
                <td><a href="/gallery/{{poi._id}}" class="uk-card uk-card-small uk-card-hover uk-padding-small">
                    <i class="fas fa-image fa-1x" style="color:rgb(12,19,205)" title="Gallery" pos="bottom" uk-tooltip></i>
                </a></td>
                <td><a href="/delete-poi/{{poi._id}}"><i class="far fa-trash-alt fa-1x" style="color:rgb(234,10,55)" title="Delete" pos="bottom" uk-tooltip></i>
                </a></td>
            </tr>
        </tbody>
    </table>
</div>
    <div class="uk-width-expand@m">
        <div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
            <h3 class="uk-card-title uk-text-center">Upload an Image of {{poi.name}}</h3>
        <div>
            {{> upload }}
        </div>
    </div>
    </div>
{{> error}}